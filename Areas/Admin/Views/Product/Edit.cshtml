@model OnlineShop.Models.Products
@{
    ViewData["Title"] = "Amira WebSite";
}
<br />

<h2 class="text-info">Amira Edit product </h2>
<form asp-action="Edit" method="post" enctype="multipart/form-data">

    <div asp-validation-summary="ModelOnly" class="p-4 rounded border"></div>
    <div class="card-group row p-4 rounded border">

        <div class="col-8">
            <div class="form-group">
                <div class="col-4">
                    <label asp-for="Name" class="control-lable"></label>
                </div>
                <div class="col-8">
                    <input type="hidden" asp-for="Id" />
                    <input asp-for="Name" class="form-control" />
                </div>

                <span asp-validation-for="Name"></span>
            </div>

            <div class="form-group">
                <div class="col-4">
                    <label asp-for="Price" class="control-lable"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Price" class="form-control" />
                </div>

                <span asp-validation-for="Price"></span>
            </div>

            <div class="form-group">
                <div class="col-4">
                    <label asp-for="Image"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Image" class="form-control" type="file" />
                </div>

                <span asp-validation-for="Image"></span>
            </div>

            <div class="form-group">
                <div class="col-4">
                    <label asp-for="ProductColor" class="control-lable"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ProductColor" class="form-control" />
                </div>

                <span asp-validation-for="ProductColor"></span>
            </div>

            <div class="form-group">
                <div class="col-4">
                    <label asp-for="ProductTypeId" class="control-lable"></label>
                </div>
                <div class="col-8">
                    <select asp-for="ProductTypeId" asp-items="ViewBag.ProductTypeId" class="form-control"> </select>
                    @* <input asp-for="ProductTypeId" class="form-control" /> *@

                </div>

                <span asp-validation-for="ProductTypeId"></span>
            </div>

            <div class="form-group">
                <div class="col-4">
                    <label asp-for="SpecialTagId" class="control-lable"></label>
                </div>
                <div class="col-8">
                    <select asp-for="SpecialTagId" asp-items="ViewBag.SpecialTagId" class="form-control"> </select>
                    @*<input asp-for="SpecialTagId" class="form-control" />*@
                </div>

                <span asp-validation-for="SpecialTagId"></span>
            </div>

            <div class="form-group">
                <div class="col-4">
                    <label asp-for="IsAvailable"></label>
                </div>
                <div class="col-8">
                    <input asp-for="IsAvailable" type="checkbox" width="150px" />
                </div>

                <span asp-validation-for="IsAvailable"></span>
            </div>
            <br /><br />
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back To List</a>
            </div>
        </div>
        <div class="col-1"></div>
        <div class="col-3">
            <img  src="~/@Model.Image" width="100%" style="border-radius:5px;border:1px solid #efefef" />
        </div>


    </div>
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

