@model OnlineShop.Models.Products
@{
    ViewData["Title"] = "Delete";
}
<br />

<h2 class="text-info">Delete Product</h2>
<form asp-action="Delete" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id"/>

    <div asp-validation-summary="ModelOnly" class="p-4 rounded border"></div>
    <h3>@ViewBag.message</h3>
    <div class="card-group row">

        <div class="form-group">
            <div class="col-2">
                <label asp-for="Name" class="control-lable"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" readonly="readonly" class="form-control" />
            </div>

            <span asp-validation-for="Name"></span>
        </div>

        <div class="form-group">
            <div class="col-2">
                <label asp-for="Price" class="control-lable"></label>
            </div>
            <div class="col-5">
                <input asp-for="Price" readonly="readonly" class="form-control" />
            </div>

            <span asp-validation-for="Price"></span>
        </div>

        @*<div class="form-group">
            <div class="col-2">
                <label asp-for="Image"></label>
            </div>
            <div class="col-5">
                <input asp-for="Image"  readonly="readonly" class="form-control" type="file" />
            </div>

            <span asp-validation-for="Image"></span>
        </div>*@

        <div class="form-group">
            <div class="col-2">
                <label asp-for="ProductColor" class="control-lable"></label>
            </div>
            <div class="col-5">
                <input asp-for="ProductColor" readonly="readonly" class="form-control" />
            </div>

            <span asp-validation-for="ProductColor"></span>
        </div>

        <div class="form-group">
            <div class="col-2">
                <label asp-for="ProductTypeId" class="control-lable"></label>
            </div>
            <div class="col-5">
                <select asp-for="ProductTypeId" readonly="readonly" asp-items="ViewBag.ProductTypeId" class="form-control"> </select>
                @* <input asp-for="ProductTypeId" class="form-control" /> *@

            </div>

            <span asp-validation-for="ProductTypeId"></span>
        </div>

        <div class="form-group">
            <div class="col-2">
                <label asp-for="SpecialTagId" class="control-lable"></label>
            </div>
            <div class="col-5">
                <select asp-for="SpecialTagId" readonly="readonly" asp-items="ViewBag.SpecialTagId" class="form-control"> </select>
                @*<input asp-for="SpecialTagId" class="form-control" />*@
            </div>

            <span asp-validation-for="SpecialTagId"></span>
        </div>

        <div class="form-group">
            <div class="col-2">
                <label asp-for="IsAvailable"></label>
            </div>
            <div class="col-5">
                <input asp-for="IsAvailable" readonly="readonly" type="checkbox" width="150px" />
            </div>

            <span asp-validation-for="IsAvailable"></span>
        </div>
        <br /><br />
        <div class="form-group">

            <h3>Do you want to delete this product ?!</h3>
            <input type="submit" class="btn btn-danger" value="Delete" asp-route-id="@Model.Id" />
            <a asp-action="Index" class="btn btn-success">Back To List</a>
        </div>
    </div>
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

