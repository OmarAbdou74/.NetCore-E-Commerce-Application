@model IEnumerable<OnlineShop.Models.SpecialTag>
@{
    ViewData["Title"] = "Index";
}
<br />


<div class="row">
    <div class="col-6">
        <h2 class="text-info">Special Tag List</h2>
    </div>

    <div class="col-6">
        <a asp-action="Create" class="btn btn-info"><i class="fa-solid fa-plus"></i> &nbsp; New Tag Name </a>

    </div>
</div>

<br />

<div>
    <table class="table table-striped border">
        <tr>
            <th> @Html.DisplayNameFor(c=>c.Name)</th>
            <th></th>
           
        </tr>
       
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <partial name="_ButtonPartial" model="item.Id"></partial>
                </td>
            </tr>
        }
    </table>
</div>