@model List<OnlineShop.Models.Products>
@{
	ViewData["Title"]="Cart";
}
<h1>Your Cart</h1>
<br />
<div class="row">
	<table class="table table-striped rounded-1">
		<thead>
			<tr>
				<th>Image</th>
				<th>Name</th>
				<th>Price</th>
				<th>Product Type</th>
				<th>Color</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach(var item in Model)
			{
				<tr>
					<td>
						<img src="~/@item.Image" width="200px" height="150px"/>
					</td>
					<td>@item.Name</td>
					<td>@item.Price</td>
					<td>@item.ProductTypes.ProductType</td>
					<td>@item.ProductColor </td>
					<td>
						<a asp-area="Customer" asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></a>
					</td>
				</tr>

			}
			
		</tbody>
	</table>
</div>
<div class="row">
	<div class="col-6">
		<a asp-action="Index" asp-controller="Home" class=" btn btn-success">Back To List</a>
	</div>
	<div class="col-6 mr-auto">
		<h3>Total Amount </h3>
		<h3>Grant Total:@Model.Sum(c=>c.Price)</h3>
		<a asp-action="Index" asp-controller="Home" class="btn btn-primary">Process to checkout</a>
	</div>

</div>