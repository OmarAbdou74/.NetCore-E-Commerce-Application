@model OnlineShop.Models.AppUser
@{
    ViewData["Title"] = "Create";
}
<br />

<h2 class="text-info">Add New User </h2>
<form asp-action="Create" method="post" id="user-form" enctype="multipart/form-data ">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <h3>@ViewBag.message</h3>

    <div class="row">

        <div class="p-4 rounded border p-3">
            <div class="card-group form-group">
            </div>
            <div class="card-group row">
                <div class="col-2">
                    <label asp-for="UserName" class="control-lable"></label>
                </div>
                <div class="col-5">
                    <input asp-for="UserName" class="form-control" />
                </div>
                <span asp-validation-for="UserName"></span>
            </div>

            <div class="card-group row">
                <div class="col-2">
                    <label asp-for="PasswordHash" class="control-lable"></label>
                </div>
                <div class="col-5">
                    <input asp-for="PasswordHash" class="form-control" type="password" />
                </div>
                <span asp-validation-for="PasswordHash"></span>
            </div>

            <div class="card-group row">
                <div class="col-2">
                    <label asp-for="FirstName" class="control-lable"></label>
                </div>
                <div class="col-5">
                    <input asp-for="FirstName" class="form-control" />
                </div>
                <span asp-validation-for="FirstName"></span>
            </div>

            <div class="card-group row">
                <div class="col-2">
                    <label asp-for="LastName" class="control-lable"></label>
                </div>
                <div class="col-5">
                    <input asp-for="LastName" class="form-control" />
                </div>
                <span asp-validation-for="LastName"></span>
            </div>


            <div class="card-group row">
                <div class="col-5">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-success">Back To List</a>
                </div>


            </div>

        </div>
    </div>

</form>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
    <script type="text/javascript">
        $(document).ready(function () {
            $("#user-form").validate({
                rules: {
                    Username: {
                        required: true,       
                    },
                    PasswordHash: {
                        required: true,
                    }
                },
                message:{
                    UserName:"Please enter Your Email",
                    PasswordHash: "Please enter a Password"
                }


                }
            });
        });
    </script>
    }

  